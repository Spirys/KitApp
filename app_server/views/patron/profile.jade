    // Checkbox, Radio & Switch Plugins
    script(src='../bootstrap/javascripts/bootstrap-checkbox-radio.js')
    // Charts Plugin
    script(src='../bootstrap/javascripts/chartist.min.js')
    // Notifications Plugin
    script(src='../bootstrap/javascripts/bootstrap-notify.js')
