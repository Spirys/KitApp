                                    .content
                                        .row
                                            .col-xs-5
                                                .icon-big.icon-danger.text-center
                                                    i.ti-money
                                            .col-xs-7
                                                .numbers
                                                    p Overdue
                                                    |                                             3
                                        .footer
                                            hr
                                            .stats
                                                i.ti-timer
