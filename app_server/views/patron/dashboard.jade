extends patron_layout
block head_extra

block content
    body
        .wrapper
            .sidebar(data-background-color='white', data-active-color='danger')
                .sidebar-wrapper
                    .logo
                        a.simple-text(href='http://kitapptatar.ru')
                            | Kitapp
                    ul.nav
                        li.active
                            a(href='dashboard')
                                i.ti-panel
                                p Dashboard
                        li
                            a(href='user')
                                i.ti-user
                                p User Profile
                        li
                            a(href='card')
                                i.ti-view-list-alt
                                p Library card
                        li
                            a(href='search')
                                i.ti-book
                                p Search books
                        li
                            a(href='notifications')
                                i.ti-bell
                                p Notifications
            .main-panel
                nav.navbar.navbar-default
                    .container-fluid
                        .navbar-header
                            button.navbar-toggle(type='button')
                                span.sr-only Toggle navigation
                                span.icon-bar.bar1
                                span.icon-bar.bar2
                                span.icon-bar.bar3
                            a.navbar-brand(href='#') Dashboard
                        .collapse.navbar-collapse
                            ul.nav.navbar-nav.navbar-right
                                li
                                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                                        i.ti-email
                                        p Mail
                                li.dropdown
                                    a.dropdown-toggle(href='#', data-toggle='dropdown')
                                        i.ti-bell
                                        p.notification 5
                                        p Notifications
                                        b.caret
                                    ul.dropdown-menu
                                        li
                                            a(href='#') Notification 1
                                        li
                                            a(href='#') Notification 2
                                        li
                                            a(href='#') Notification 3
                                        li
                                            a(href='#') Notification 4
                                        li
                                            a(href='#') Another notification
                                li
                                    a(href='#')
                                        i.ti-settings
                                        p Settings
                .content
                    .container-fluid
                        .row
                            .col-lg-3.col-sm-6
                                .card
                                    .content
                                        .row
                                            .col-xs-5
                                                .icon-big.icon-warning.text-center
