extends auth_layout

block content
    form(class="form-signin", method="post", id="login-form")
        img(class="mb-4", src="images/kitapp.png", alt="", width="72", height="72")
        div(class="container")
            div(class="row")
                div(class="col-7 text-left")
                    h1(class="h2 mb-2 font-weight-normal") #{title}
                div(class="col-5 mb-2 text-right", style="align-self: center;")
                    a(class="h4 font-weight-normal text-primary" href="../register") Sign up
        div(class="text-left")
            div(class="form-label-group")
                input(id="inputEmail", name="email", class="form-control", placeholder="Email address", required="", autofocus="true", type="email")
                label(for="inputEmail") Email address
            div(class="form-label-group")
                input(id="inputPassword", name="password", class="form-control", placeholder="Password", required="", type="password")
                label(for="inputPassword") Password
            div(class="checkbox mb-3")
                label
                    input(value="remember-me", name="remember", type="checkbox")
                    | Remember me
            div(id="error")
        button(class="btn btn-lg btn-primary btn-block", type="submit", id="button-login") Sign in
        p(class="mt-5 mb-3 text-muted") Â© KitApp 2018

block extra
    script(src="../javascripts/jquery.md5.js")
    script(src="../javascripts/validation.min.js")
    script(src="../javascripts/login.js")